<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.tongari.mokutan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <!-- Google API へのアクセス -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- インターネットへのアクセス -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 外部SDカードへの書き込み -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 位置情報の取得 (Wi-Fi経由) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 位置情報の取得 (GPS経由) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- OpenGL ES version 2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >

        <!-- Google API の認証キー -->
       <!--  <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="your-api-key"
             />
        -->     <!--  android:value="your-api-key" -->
            
        <activity
            android:name="mobi.tongari.mokutan.ui.TopActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.EnsenListActivity_"
            android:label="@string/title_activity_ensen_list" >
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.SherlockTabActivity_"
            android:label="@string/title_activity_sherlock_tab" >
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.CarNameListActivity_"
            android:label="@string/title_activity_carname_list" >
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.DbTestActivity_"
            android:label="@string/title_activity_db_test" >
        </activity>
        <activity
            android:name="mobi.tongari.mokutan.ui.MapActivity_"
            android:label="@string/title_activity_map" >
        </activity>
    </application>

</manifest>